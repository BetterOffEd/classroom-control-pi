<%
$path = $osfamily ? {
  'centos'  => '/etc/motd',
  'windows' => 'C:/Users/Administrators/Desktop/README.txt',
}
-%>
file { <%= $path %>:
  ensure  => file,
  owner   => 'root',
  group   => 'root',
  mode    => '0644',
  content => "Hey, Puppet is fun!\n",
}

package { 'cowsay':
  ensure   => present,
  provider => gem,
}
